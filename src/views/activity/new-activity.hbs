<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Actividad</h3>
        </div>
        <div class="card-body">
            <form action="/activities/new-activity" method="POST">
                <div class="mt-3">
                    <input type="text" name="title" class="form-control" placeholder="Titulo de la tarea" autofocus required>
                </div>
                <div class="mt-3">
                    <textarea name="description" class="form-control" placeholder="Descripcion de la tarea" required></textarea>
                </div>
                <div class="mt-3">
                    <h5>Fecha de inicio</h5>
                    <input type="date" name="calendar_start" class="form-control" required>
                </div>
                <div class="mt-3">
                    <h5>Fecha de termino</h5>
                    <input type="date" name="calendar_finish" class="form-control" required>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary w-100" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>